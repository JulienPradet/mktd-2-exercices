# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
# Set default charset
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

# Web
[*.{js,css,scss,html,json,yml}]
indent_style = space
indent_size = 2

# Java 
[*.{java,xml}]
indent_style = space
indent_size = 4
